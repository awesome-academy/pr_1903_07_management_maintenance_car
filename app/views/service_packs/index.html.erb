<div class="main-automotive-parts">
  <p class="amount-product">Showing <%= @service_packs.length %> results</p>
  <div class="columns-4">
    <div class="row">
      <ul class="products columns-4">
        <% @service_packs.each do |service_pack| %>
          <li class="automotive-part">
            <%= link_to "#", class: "automotive-part-details" do %>
              <% if service_pack.logo_service_pack.attached? %>
                <%= image_tag(service_pack.logo_service_pack, class: "logo-automotive-part") %>
              <% end %>
              <h2 class="automotive-part-info">
                <p class="part-name"><%= service_pack.name %></p>
              </h2>
              <p><%= service_pack.desciption.slice(0..60) %></p>
              <%= link_to("Xem them", "#", class: "button-details") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

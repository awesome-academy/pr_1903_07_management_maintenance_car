<ul class="nav-account list-inline hidden-xs pull-right">
  <% if user_signed_in? %>
  <li class="dropdown">
    <button class="btn-mini dropdown-toggle" data-toggle="dropdown">
      <% if current_user.avatar.attached? %>
        <%= image_tag(current_user.avatar, class: "avatar-user") %>
      <% else %>
        <%= image_tag("Avatar Default/default-avatar.png", class: "avatar-user") %>
      <% end %>
      <%= last_name(current_user.username) %>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Profile', "#" %></li>
      <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
    </ul>
  </li>
  <% else %>
    <li><%= link_to 'Log In', new_user_session_path %>/</li>
    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
  <% end %>
</ul>
